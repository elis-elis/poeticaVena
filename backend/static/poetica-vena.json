{
	"swagger": "2.0",
    "info": {
        "title": "poeticaVENA API",
        "version": "1.0.0"
    },
    "servers": [{ "url": "http://localhost:5000" }],
    "schemes": ["http"],
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header",
            "description": "üç≠ Enter your bearer token in the format **Bearer <token>**"
